FROM jboss/wildfly:8.2.1.Final

RUN mkdir /opt/jboss/wildfly/customization/

# COPY postgresql-9.3-1103.jdbc41.jar /opt/jboss/wildfly/customization/postgresql-9.3-1103.jdbc41.jar
# COPY postgis-jdbc-2.1.7.2.jar /opt/jboss/wildfly/customization/postgis-jdbc-2.1.7.2.jar

COPY postgresql-42.2.4.jar /opt/jboss/wildfly/customization/postgresql-42.2.4.jar
COPY postgres-socket-factory-1.0.10.jar /opt/jboss/wildfly/customization/postgres-socket-factory-1.0.10.jar
COPY jnr-unixsocket-0.18.jar /opt/jboss/wildfly/customization/jnr-unixsocket-0.18.jar
COPY guava-20.0.jar /opt/jboss/wildfly/customization/guava-20.0.jar
COPY jdbc-socket-factory-core-1.0.10.jar /opt/jboss/wildfly/customization/jdbc-socket-factory-core-1.0.10.jar
COPY google-api-services-sqladmin-v1beta4-rev56-1.23.0.jar /opt/jboss/wildfly/customization/google-api-services-sqladmin-v1beta4-rev56-1.23.0.jar
COPY google-api-client-1.23.0.jar /opt/jboss/wildfly/customization/google-api-client-1.23.0.jar
COPY google-oauth-client-1.23.0.jar /opt/jboss/wildfly/customization/google-oauth-client-1.23.0.jar
COPY google-http-client-1.23.0.jar /opt/jboss/wildfly/customization/google-http-client-1.23.0.jar
COPY httpclient-4.0.1.jar /opt/jboss/wildfly/customization/httpclient-4.0.1.jar
COPY httpcore-4.0.1.jar /opt/jboss/wildfly/customization/httpcore-4.0.1.jar
COPY commons-logging-1.1.1.jar /opt/jboss/wildfly/customization/commons-logging-1.1.1.jar
COPY commons-codec-1.3.jar /opt/jboss/wildfly/customization/commons-codec-1.3.jar
COPY google-http-client-jackson2-1.23.0.jar /opt/jboss/wildfly/customization/google-http-client-jackson2-1.23.0.jar
COPY jackson-core-2.1.3.jar /opt/jboss/wildfly/customization/jackson-core-2.1.3.jar

COPY hibernate-spatial-4.3.jar /opt/jboss/wildfly/modules/system/layers/base/org/hibernate/main/hibernate-spatial-4.3.jar
COPY jts-1.13.jar /opt/jboss/wildfly/modules/system/layers/base/org/hibernate/main/jts-1.13.jar

# File where sed expression has been performed:
COPY wildfly/hibernate_module.xml /opt/jboss/wildfly/modules/system/layers/base/org/hibernate/main/module.xml

# Updated JAXB implementation to work with Netex jaxb classes
COPY jaxb-impl-2.2.11.jar /opt/jboss/wildfly/modules/system/layers/base/com/sun/xml/bind/main/jaxb-impl-2.2.11.jar
COPY jaxb-core-2.2.11.jar /opt/jboss/wildfly/modules/system/layers/base/com/sun/xml/bind/main/jaxb-core-2.2.11.jar
COPY jaxb-xjc-2.2.11.jar /opt/jboss/wildfly/modules/system/layers/base/com/sun/xml/bind/main/jaxb-xjc-2.2.11.jar
COPY wildfly/jaxb_module.xml /opt/jboss/wildfly/modules/system/layers/base/com/sun/xml/bind/main/module.xml

COPY xercesImpl-2.11.0.SP6-RB.jar /opt/jboss/wildfly/modules/system/layers/base/org/apache/xerces/main/xercesImpl-2.11.0.SP6-RB.jar
COPY wildfly/xerces_module.xml /opt/jboss/wildfly/modules/system/layers/base/org/apache/xerces/main/module.xml


#Copy iev.properties
COPY wildfly/iev.properties /etc/chouette/iev/

RUN touch /opt/jboss/wildfly/build.log
RUN chmod a+w /opt/jboss/wildfly/build.log

# Wildfly container configurations, copy and execute
COPY wildfly/*.cli /opt/jboss/wildfly/customization/
COPY wildfly/execute.sh /opt/jboss/wildfly/customization/
RUN /opt/jboss/wildfly/customization/execute.sh

# TODO Consider to make password for chouette iev console configurable
RUN /opt/jboss/wildfly/bin/add-user.sh admin pingu123 --silent


# Overriding previously installed java version:
RUN curl -L http://10.3.255.86/jdk-8u144-linux-x64.tar.gz > jdk.tgz
RUN tar xzf jdk.tgz
ENV JAVA_HOME /opt/jboss/jdk1.8.0_144/

# Deploying by copying to deployment directory
COPY chouette.ear /opt/jboss/wildfly/standalone/deployments/

# Copy standalone customizations
COPY wildfly/standalone.conf /opt/jboss/wildfly/bin
# From http://stackoverflow.com/questions/20965737/docker-jboss7-war-commit-server-boot-failed-in-an-unrecoverable-manner
RUN rm -rf /opt/jboss/wildfly/standalone/configuration/standalone_xml_history \
  && mkdir -p /opt/jboss/data \
  && chown jboss:jboss /opt/jboss/data

# Agent-bond setup largely copied from:
# https://hub.docker.com/r/fabric8/java-jboss-openjdk8-jdk/~/dockerfile/
RUN mkdir -p /opt/jboss/wildfly/agent-bond \
 && curl http://central.maven.org/maven2/io/fabric8/agent-bond-agent/1.0.2/agent-bond-agent-1.0.2.jar \
          -o /opt/jboss/wildfly/agent-bond/agent-bond.jar \
 && chmod 444 /opt/jboss/wildfly/agent-bond/agent-bond.jar
ADD jmx_exporter_config.yml /opt/jboss/wildfly/agent-bond/
EXPOSE 8778 9779

# Running as root, in order to get mounted volume writable:
USER root

COPY disk_usage_notifier.sh /disk_usage_notifier.sh
RUN chmod a+x /disk_usage_notifier.sh

# This argument comes from https://github.com/jboss-dockerfiles/wildfly
# It enables the admin interface.

CMD ["/opt/jboss/wildfly/bin/standalone.sh", "-b", "0.0.0.0", "-bmanagement", "0.0.0.0", "--read-only-server-config=standalone.xml"]
