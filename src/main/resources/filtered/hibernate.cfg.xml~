<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!--
        -->
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.password">${hibernate.password}</property>
    <property name="hibernate.default_schema">${database.schema}</property>
    <property name="hibernate.connection.url">jdbc:postgresql://${database.hostname}:${database.port}/${database.name}</property>
    <property name="hibernate.connection.username">${hibernate.username}</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="connection.useUnicode">true</property>
    <property name="connection.characterEncoding">UTF-8</property>
  </session-factory>
</hibernate-configuration>
