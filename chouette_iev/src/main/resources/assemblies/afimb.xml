      <file>
         <source>${project.build.directory}/git.properties</source>
         <outputDirectory>/</outputDirectory>
		</file>
      <file>
         <source>${project.build.directory}/iev.properties</source>
         <outputDirectory>/</outputDirectory>
      </file>
		<file>
			<source>../LICENSE.md</source>
			<outputDirectory>/</outputDirectory>
		</file>
